{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-blocks": [
          "error",
          "always"
        ],
        "no-trailing-spaces": [
          "error"
        ],
        "space-infix-ops": [
          "error"
        ],
        "brace-style": [
          "error",
          "1tbs",
          { "allowSingleLine": true }
        ],
        "no-loop-func":"error",
        "comma-spacing": "error",
        "object-property-newline": "error"
    }
}